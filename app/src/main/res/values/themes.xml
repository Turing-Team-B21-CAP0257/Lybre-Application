<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SmartLibraryApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/palette_300</item>
        <item name="colorPrimaryVariant">@color/palette_200</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/palette_300</item>
        <item name="colorSecondaryVariant">@color/palette_400</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!--  AUTH  -->
    <style name="margin_auth" parent="Theme.SmartLibraryApp">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="title_head2_text" parent="margin_auth">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="title_content_text">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="title_content_small_text">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">10sp</item>
    </style>

    <!--  HOME  -->
    <style name="title_header">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Theme.SmartLibraryApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--  PROFILE  -->
    <style name="textViewProfile">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>
    <!--  PROFILE  -->
    <style name="textViewProfile">
        <item name="android:layout_width">wrap_content</item>
