<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.ui.settings.SettingsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/layout_header_settings"
            layout="@layout/layout_header_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="-50dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/background_main"
            android:orientation="vertical">

            <include
                android:id="@+id/layout_header_change_language"
                layout="@layout/layout_change_language"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:src="@drawable/line_divider"
                android:layout_marginTop="7dp" />

            <include
                android:id="@+id/layout_logout"
                layout="@layout/layout_logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:src="@drawable/line_divider"
                android:layout_marginTop="7dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/about_application_title"
                android:textAlignment="center"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_regular"
                android:layout_marginTop="10dp"/>

            <include
                android:id="@+id/layout_android_developer"
                layout="@layout/layout_android_developer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <include
                android:id="@+id/layout_cloud_computing"
                layout="@layout/layout_cloud_computing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <include
                android:id="@+id/layout_machine_learning"
                layout="@layout/layout_machine_learning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:textAlignment="center"
                android:text="@string/copy_right_smart_library_system"/>
        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>